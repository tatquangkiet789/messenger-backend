{
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"rootDir": "./src",
		"outDir": "./build",
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/configs/@types", "./node_modules/@types"],
		"baseUrl": "./src",
		"paths": {
			"~/*": ["*"]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	}
}
